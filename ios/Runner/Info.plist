<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

	<!-- App Info -->
	<key>CFBundleDisplayName</key>
	<string>Dedicated Cowboy</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleName</key>
	<string>dedicated_cowboy</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>

	<!-- App Transport Security (Allow Firebase & Google APIs) -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>

	<!-- Location Permissions (geolocator, geocoding, google_maps_flutter) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>We use your location to show nearby listings and services.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>We use your location to provide continuous location-based services.</string>

	<!-- Camera & Photos (image_picker) -->
	<key>NSCameraUsageDescription</key>
	<string>We need camera access to let you take photos for your listings or profile.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>We need photo library access to upload images from your gallery.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>We need photo library access to save images from the app.</string>

	<!-- Notifications (firebase_messaging, flutter_local_notifications) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
	</array>
	<key>NSUserNotificationUsageDescription</key>
	<string>We use notifications to keep you informed about updates, offers, and messages.</string>

	<!-- Google Maps -->
	<key>io.flutter.embedded_views_preview</key>
	<true/>

	<!-- Device Orientation -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- Launch Storyboard (Required for iOS App Store) -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>

	<!-- Firebase Deep Links -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<!-- Replace with your REVERSED_CLIENT_ID from GoogleService-Info.plist -->
				<string>com.googleusercontent.apps.xxxxxxxxxxxxxxxx</string>
			</array>
		</dict>
	</array>

	<!-- Background fetch (for location, notifications, firebase sync) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
		<string>location</string>
	</array>

</dict>
</plist>
